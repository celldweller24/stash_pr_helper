{
  "manifest_version": 2,

  "name": "Stash helper",
  "description": "Fills in Pull Request's reviewers",
  "version": "1.0",

  "permissions": [
    "activeTab"
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Fill in PR's reviewers"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}